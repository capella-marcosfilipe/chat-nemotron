# ===========================================
# Nemotron Chat Microservice - Environment Variables
# ===========================================

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False
RELOAD=False

# NVIDIA API (Get your free key at https://build.nvidia.com)
NVIDIA_API_KEY=your_nvidia_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Queue Names
QUEUE_GPU_REQUESTS=chat_gpu_requests
QUEUE_API_REQUESTS=chat_api_requests
QUEUE_RESPONSES=chat_responses
QUEUE_DLQ_GPU=chat_gpu_dlq
QUEUE_DLQ_API=chat_api_dlq

# Retry Policy
MAX_RETRIES=3
RETRY_DELAY=2
RETRY_BACKOFF=2

# Cache TTL (seconds)
CACHE_TTL=3600
IDEMPOTENCY_TTL=86400
JOB_TTL=86400

# Worker Settings
WORKER_PREFETCH_COUNT=1
WORKER_GPU_INSTANCES=1
WORKER_API_INSTANCES=3
